@model BusinessLayer.Login

@{
    ViewBag.Title = "Login Page";
    


}
@using (Html.BeginForm("LoginCheck", "Login"))
{
    <div class="jumbotron bg-light text-dark">
        <h1><label id="Label1">Login</label></h1>
        <div>
            <div class="form-group">
                <label id="Label2" class="col-form-label">User Id</label>
                <input type="text" id="UserId" class="form-control" name="UserId" />
            </div>
            <div class="form-group">
                <label id="Label3" class="col-form-label">Password</label>
                <input type="password" id="Password" class="form-control" name="Password" />
            </div>
            <div>
                <input type="submit" class="btn btn-outline-success" value="Login" />
            </div>
            @Session["loginErrorMessage"]
        </div>
    </div>
}