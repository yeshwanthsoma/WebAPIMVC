            <a class="navbar-brand"><h3 style="color:#ffffff">Banking Application</h3></a>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @if (ViewContext.RouteData.Values["Controller"].ToString() != "Login")
                        {
                            <button type="button" id="homeBtn" onclick="location.href='@Url.Action("Index", "Login")'" class="btn btn-outline-light  pull-right">Home</button>
                        }
                    </li>
                </ul>
            </div>
            <div class="p-sm-2">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
    @if (Session["role"] != null)
                        {
        <a class="navbar-brand"><h4 style="color:#ffffff">Welcome @Session["emailId"] !</h4></a>
                        }
    @if (Session["accountNumber"] != null)
                        {
                            string input = @Session["accountNumber"].ToString();
                            var result = "XXXXXXX" + input.Substring(input.Length - 3);
                            <a class="navbar-brand">
